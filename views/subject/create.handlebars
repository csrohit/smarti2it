<div class="form-container">
    <form method="post" {{#if subject}}action="javascript:subject.update()" {{ else }}action="javascript:subject.create()"{{/if}}>
        <h3>{{#if subject}}Update{{ else }}Create{{/if}} subject</h3>
        <div class="input-field">
            <label for="name">Name:</label>
            <input type="text" name="name" id="name" required {{#if subject }}value="{{subject.name}}" {{/if}}>
        </div>

        <div class="input-field">
            <label for="department">Department:</label><br>
            <select onchange="javascript:subject.departmentSelected()" name="department" id="department">
                <option selected value=""> - </option>
                {{#each departments}}
                <option value="{{_id}}">{{name}}</option>
                {{/each}}
            </select>
        </div>
        <input type="hidden" name="_id" value={{subject._id}}>
        <div class="input-field">
            <label for="teacher">Teacher</label>
            <select name="teacher" id="teacher">
                <option value=""> - </option>
                {{#each teachers}}
                <option value="{{value}}">{{name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="input-field">
            <label for="university_code">University code</label>
            <input type="number" name="university_code" id="university_code" {{#if subject }}value="{{subject.university_code}}" {{/if}}>
        </div>
        <div class="input-field">
            <button type="submit" class="btn btn-submit" name="login-submit">Submit</button><br>
        </div>
    </form>
</div>
